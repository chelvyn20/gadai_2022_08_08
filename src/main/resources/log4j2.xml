<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="5" status="debug" strict="true">
    <Properties>
        <Property name="log-path">D:/Applications/Training/logs/gadai</Property>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</Property>
    </Properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}" />
        </Console>
        <File name="MyFile" fileName="${log-path}/application.log">
            <PatternLayout pattern="${log-pattern}" />
        </File>

        <RollingFile name="RollingFile" fileName="${log-path}/nds-catalogue-all.log" filePattern="${log-path}/nds-catalogue-all-%d{yyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
        <RollingFile name="SchCicilanDendaRollingFile" fileName="${log-path}/nds-catalogue-sch-cicilan-denda.log" filePattern="${log-path}/nds-catalogue-sch-cicilan-denda-%d{yyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
    </appenders>

    <loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
        <Logger name="id.co.nds.gadai_2022_08_08.schedulers.CicilanDendaScheduler" level="debug">
            <AppenderRef ref="SchCicilanDendaRollingFile" />
        </Logger>
    </loggers>
</configuration>